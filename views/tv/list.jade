doctype 5
html(ng-app="tvApp")
	head
		title= title
		link(rel='stylesheet', href='/stylesheets/reset.css')
		link(rel='stylesheet', href='/stylesheets/list.css')
		link(rel='stylesheet', href='/stylesheets/font-awesome/css/font-awesome.min.css')
		script(type='text/javascript', src='/javascripts/angular-1.2.3/angular.min.js')
		script(type='text/javascript', src='/javascripts/angular-1.2.3/angular-route.min.js')
		script(type='text/javascript', src='/javascripts/app.js')
		script(type='text/javascript', src='/javascripts/controllers.js')
		script(type='text/javascript', src='/javascripts/modules.js')
	body
		div(ng-view)
		script(type="text/ng-template",id="tags").
			<div class="m-container f-clearfix">
				<div class="m-header f-clearfix">
					{{name}}
				</div>
				<div class="m-mid f-clearfix">
					<ul class="m-list f-clearfix m-list-1">
						<li class="m-item" ng-repeat="items in data_1">
							<img ng-src="{{items.picture_url}}" />
							<div ng-class="['m-des', items.color]">
								<h3>{{items.name}}</h3>
								<p>{{items.director}}</p>
								<p class="u-play" ng-click="playVideo($event)", data-id="{{items.id}}">
									<i class="fa fa-play"></i>
								</p>
							</div>
						</li>
					</ul>
					<ul class="m-list f-clearfix m-list-2">
						<li class="m-item" ng-repeat="items in data_2">
							<img ng-src="{{items.picture_url}}" />
							<div ng-class="['m-des', items.color]">
								<h3>{{items.name}}</h3>
								<p>{{items.director}}</p>
								<p class="u-play" ng-click="playVideo($event)", data-id="{{items.id}}">
									<i class="fa fa-play"></i>
								</p>
							</div>
						</li>
					</ul>
				</div>
			</div>
		script(type="text/ng-template", id="play").
			<video class="m-video-1" controls autoplay ng-if="hasMp4" ng-src="{{playSrc1}}" ng-ended="ended($event)" ng-can-play-through="canPlayThrough($event)"></video>
			<video class="m-video-2" preload="auto" ng-src="{{playSrc2}}"></video>
			<h1 ng-if = "noSrc">你播放的资源不存在</h1>
			<div class="m-spin" ng-if = "loading">
				<div class="u-spin">
					<div class="bar1"></div>
					<div class="bar2"></div>
					<div class="bar3"></div>
					<div class="bar4"></div>
					<div class="bar5"></div>
					<div class="bar6"></div>
					<div class="bar7"></div>
					<div class="bar8"></div>
				</div>
			</div>


